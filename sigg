<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Visor PNOA en EPSG:25830</title>
    <link rel="stylesheet" href="https://unpkg.com/ol@v7.0.0/ol.css">
    <script src="https://unpkg.com/ol@v7.0.0/ol.js"></script>
</head>
<body>
    <!-- Contenedor donde se cargará el mapa -->
    <div id="openLayersContainer" style="width: 100%; height: 100vh;"></div>

    <script>
        // Crear el visor del mapa con OpenLayers
        let viewer = new ol.Map({
            target: 'openLayersContainer',
            layers: [
                // Capa base PNOA WMS en EPSG:25830
                new ol.layer.Tile({
                    source: new ol.source.TileWMS({
                        url: 'https://www.ign.es/wms-inspire/pnoa-ma',
                        params: {
                            'LAYERS': 'PNOA',  // Capa PNOA
                            'TILED': true       // Habilitar la carga de mosaicos
                        },
                        serverType: 'geoserver',
                        transition: 0
                    })
                })
            ],
            view: new ol.View({
                projection: 'EPSG:25830', // Usar la proyección ETRS89 / UTM 30N
                center: ol.proj.fromLonLat([-3.7038, 40.4168], 'EPSG:25830'), // Centrado en Madrid, España
                zoom: 6  // Ajuste del nivel de zoom
            })
        });

        setTimeout(function () {
            viewer.updateSize();
        }, 100);
    </script>
</body>
</html>

